# Sentinel Chat Platform - Apache Configuration
# 
# Compatible with WAMP/Apache on Windows
# DirectoryMatch removed - not allowed in .htaccess files

# Prevent directory listing
Options -Indexes

# Protect sensitive files (.env, .git, etc.)
<FilesMatch "^(\.env|\.git|composer\.(json|lock))$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Security headers (only if mod_headers is available)
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Enable rewrite engine (only if mod_rewrite is available)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Force HTTPS (uncomment in production when SSL is configured)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Note: Tests directory protection is handled by tests/.htaccess file
# DirectoryMatch is not allowed in .htaccess files, only in httpd.conf
