# Sentinel Chat Platform - Environment Configuration
# 
# Copy this file to .env and update with your actual values.
# Never commit .env to version control.
# 
# Security: Change all default values, especially API_SHARED_SECRET.

# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_BASE_URL=https://localhost
APP_API_BASE=/iChat/api

# Database Configuration (MySQL/MariaDB for temporary outbox)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=sentinel_temp
DB_USER=sentinel
DB_PASSWORD=sentinel

# UI Configuration
UI_DEFAULT_ROOM=lobby
UI_WORD_FILTER_ENABLED=true

# API Security
# CRITICAL: Change this to a strong random secret in production
API_SHARED_SECRET=change-me-now

# Security Settings
SECURITY_REQUIRE_HTTPS=true
SECURITY_SESSION_LIFETIME=3600

